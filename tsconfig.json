{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "declarationDir": "./lib",
        "sourceMap": true,
        "outDir": "./dist",
        "module": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES5",
        "lib": ["DOM", "ESNext"],
        "allowJs": true
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules", "lib", "lib-test", "dist", "test", "server", "example"]
}
